{
  "name": "snippet-bar",
  "description": "A utility app to store useful snippets directly in the mac sidebar",
  "version": "1.0.2",
  "private": true,
  "homepage": "./",
  "main": "electron/main.js",
  "author": "Alba Ongaro",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.1",
    "@types/md5": "^2.1.33",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^4.4.2",
    "@xstate/react": "^0.8.1",
    "babel-plugin-styled-components": "^1.10.7",
    "electron-devtools-installer": "^2.2.4",
    "immutable": "^4.0.0-rc.12",
    "md5": "^2.2.1",
    "menubar": "^7.2.0",
    "polished": "^3.4.3",
    "pouchdb-adapter-idb": "^7.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0",
    "react-syntax-highlighter": "^12.2.1",
    "react-tooltip": "^4.2.6",
    "rxdb": "^8.7.5",
    "rxjs": "^6.5.4",
    "standard-version": "^8.0.0",
    "styled-components": "^5.0.0",
    "ts-keycode-enum": "^1.0.6",
    "typescript": "^3.7.5",
    "xstate": "^4.7.7"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron": "^15.5.5",
    "electron-builder": "^22.2.0",
    "foreman": "^3.0.1",
    "nodemon": "^2.0.2",
    "react-app-rewired": "^2.1.5"
  },
  "scripts": {
    "start": "react-app-rewired start --strictNullChecks=false --isolatedModules=false",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start -p 3000",
    "build-electron": "yarn build && cp -r electron/. build/electron",
    "package": "electron-builder build --mac -c.extraMetadata.main=build/electron/main.js --publish never",
    "postinstall": "electron-builder install-app-deps",
    "release": "standard-version --no-verify"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.albaongaro.snippets-bar",
    "productName": "SnippetsBar",
    "mac": {
      "category": "utility",
      "icon": "./build/icon.icns"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  }
}
